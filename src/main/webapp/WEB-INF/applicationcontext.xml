<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd ">

    <bean id="g" class="fr.ubo.hello.business.GreetingBusiness" >

    </bean>

<bean id="LogInterceptorAdvice" class="fr.ubo.hello.interceptor.LogInterceptor" >

</bean>

    <bean id="LogAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor" >
    <property name="patterns">
        <list >
            <value> fr.ubo.hello\..*</value>
        </list>
    </property>
    <property name="advice" ref="LogInterceptorAdvice">  </property>
    </bean>
</beans>